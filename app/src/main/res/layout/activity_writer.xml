<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.anik.finalproject.Writer"
    android:background="@drawable/learningview">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonl21"
        android:background="@drawable/leftarrow"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonr21"
        android:background="@drawable/rightarrow"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:layout_marginTop="24dp"
        android:id="@+id/imageViewsamsur"
        android:background="@drawable/samsur"
        android:layout_below="@+id/textViewsamsur"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Samsur Rahman"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:textStyle="italic"
        android:layout_marginTop="16dp"
        android:id="@+id/textViewsamsur"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/imageViewsamsur"
        android:layout_alignStart="@+id/imageViewsamsur" />
</RelativeLayout>
