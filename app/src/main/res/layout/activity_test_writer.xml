<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context="com.example.anik.finalproject.Test_writer"
    android:background="@drawable/learning2">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Who is Kazi Nazrul Islam??"
        android:id="@+id/textViewtestpoet"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:textColor="@android:color/black"
        android:textStyle="italic"/>

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:id="@+id/imageButtontestrobithakur"
        android:layout_below="@+id/textViewtestpoet"
        android:layout_centerHorizontal="true"
       android:background="@drawable/robithakur"
        android:layout_marginTop="8dp"/>

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:id="@+id/imageButtonnazrul"
        android:layout_below="@+id/imageButtontestrobithakur"
        android:layout_alignLeft="@+id/imageButtontestrobithakur"
        android:layout_alignStart="@+id/imageButtontestrobithakur"
android:background="@drawable/nazrul1"
        android:layout_marginTop="8dp"/>

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:id="@+id/imageButtonjasim"
        android:layout_below="@+id/imageButtonnazrul"
        android:layout_alignLeft="@+id/imageButtonnazrul"
        android:layout_alignStart="@+id/imageButtonnazrul"
        android:background="@drawable/jasimuddin"
        android:layout_marginTop="8dp"/>

</RelativeLayout>
