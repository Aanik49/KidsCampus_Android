<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context="com.example.anik.finalproject.Test_architecture"
    android:background="@drawable/learning2">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Which is Shahid Minar ?"
        android:textColor="@android:color/black"
        android:textStyle="italic"
        android:id="@+id/textViewtestplace"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:id="@+id/imageButtontestminar"
        android:layout_below="@+id/textViewtestplace"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/image1"/>

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:id="@+id/imageButtontestmoyna"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageButtontestminar"
        android:layout_alignLeft="@+id/imageButtontestminar"
        android:layout_alignStart="@+id/imageButtontestminar"
        android:background="@drawable/image3"
        android:layout_marginTop="8dp"/>

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:id="@+id/imageButtonsriti"
        android:background="@drawable/image2"
        android:layout_below="@+id/imageButtontestmoyna"
        android:layout_alignLeft="@+id/imageButtontestmoyna"
        android:layout_alignStart="@+id/imageButtontestmoyna"
        android:layout_marginTop="8dp"/>
</RelativeLayout>
